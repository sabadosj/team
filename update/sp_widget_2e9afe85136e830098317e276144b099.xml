        <client_script><![CDATA[function($http,$location,$scope) {
  /* widget controller */
  var c = this;
  $http.get('/api/x_saic4_saic_team/teammgmtutils/getMyTeamStats?usrSysID='+$location.search().sys_id)
    .then(function(resStatus) {
     $scope.data.stats = resStatus.data.result;
  });

  var loadTeam = false;
  var loadChart = true;
  $scope.loadTeam = function(){
		if (!loadTeam) {
        loadTeam = true;
		    $rootScope.$broadcast('loadTeam');
		} else {
			  loadTeam = false;
		    $rootScope.$broadcast('loadTeamOff');
		}
	};

	/*
	agencies
	cert
	location
	comptech
	lang
	ed
	progmgmt
	prog
	eng
	techrole
	spec
	tools
	*/
	var oldChartArea = "";
  $scope.loadChart = function(chartArea){
		if (chartArea != oldChartArea) {
			 loadChart = true;
		} else {
			 loadChart = false;
		}
		if (loadChart) {
        loadChart = false;
			  oldChartArea = chartArea;
        $rootScope.$broadcast('loadChart',chartArea);
		} else {
			  loadChart = true;
			  oldChartArea = "";
		    $rootScope.$broadcast('loadChartOff');
		}
  };
	
	
}]]></client_script>
